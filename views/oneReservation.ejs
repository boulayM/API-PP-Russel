<%- include('partials/header', { title: 'Reservations' }) %>


<div class="card ms-4 mt-4" style="width: 24rem;">
    <div class="card-body">
      <h6 class="card-title">Reservation Id: <%= reservation._id %></h6>
      <p class="card-text">Numéro du catway: <%= reservation.catwayNumber %></p>
      <p class="card-text">Nom du client: <%= reservation.clientName %></p>
      <p class="card-text">Nom du bateau: <%= reservation.boatName %></p>
      <p class="card-text">Date d'entrée: <%= reservation.startDate %></p>
      <p class="card-text">Date de sortie: <%= reservation.endDate %></p>
      <h4>Modifier la réservation</h4>
      <form action="/reservations/<%= reservation.catwayNumber%>?_method=PATCH" method="POST">
        <label for="catwayNumber">Numéro du Catway</label><br>
        <input type="number" name="catwayNumber" value="<%= reservation.catwayNumber %>">
        <label for="clientName">Modifier le nom du client</label><br>
        <input type="text" name="clientName"><br>
        <label for="boatName">Modifier le nom du bateau</label><br>
        <input type="text" name="boatName" id="boateName"><br>
        <label for="startDate">Modifier la date d'arrivée</label><br>
        <input type="date" name="startDate"><br>
        <label for="endDate">Modifier la date de départ</label><br>
        <input type="date" name="endDate"><br><br>
        <button type="submit">MODIFIER</button>
        <button type="reset">EFFACER</button>
      </form><br><br>
        <h4>Supprimer la réservation</h4>
      <form action="/reservations/<%= reservation._id %>?_method=DELETE" method="POST">
        <label for="delete">Supprimer la réservation</label><br>
        <button type="submit" id="delete">SUPPRIMER</button>
      </form><br><br>
      <a href="/home" class="card-link">RETOUR</a>
    </div>
  </div>