<%- include('partials/header', { title: 'Catways' }) %>
<div class="container text-center">
    <h1>Bienvenue dans l'API du Port de Plaisance Russel</h1>
</div>
<%- include('partials/catwaysNavbar') %> 
<div class="container">
<div class="accordion">
    <div class="accordion-item" id="catways">
      <h2 class="accordion-header">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Liste des Catways
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
        <div class="accordion-body">
            <div class="mt-4">
                <% data.forEach(catway => { %>
                  <form action="/catways/<%= catway._id%>?_method=PATCH" method="POST" >
                    <p>Catway number: <%= catway.catwayNumber %></p>
                    <p>Catway type: <%= catway.catwayType %></p>
                    <p>Catway State: <%= catway.catwayState %></p>
                    <label for="catwayState">Modifier l'état du Catway</label><br>
                    <input type="text" name="catwayState" id="catwayState">
                    <button type="submit">MODIFIER</button>
                  </form>
                    <hr class="border border-primary border-2 opacity-50">
                <% }) %>
            </div>      
        </div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          Ajouter un Catway
        </button>
      </h2>
      <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
        <div class="accordion-body">
            <div class="mb-3">
                <fieldset class="ml-3 mt-3">
                    <legend>Formulaire pour AJOUTER un Catway</legend>
                    <form action="/catways/add?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">
                        <label for="catwayNumber">Tapez ne numéro du nouveau Catway</label><br>
                        <input type="number" id="catwayNumber" name="catwayNumber" required><br><br>
                        <label for="catwayType">Choisissez le type du nouveau Catway</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="catwayType" id="short" value="Short" checked>
                            <label class="form-check-label" for="radioDefault1">
                              Short
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="catwayType" id="long" value="Long">
                            <label class="form-check-label" for="radioDefault2">
                              Long
                            </label>
                        </div><br><br>                        
                        <label for="catwayState">Décrivez l'état du nouveau Catway</label><br>
                        <textarea name="catwayState" id="catwayState" required></textarea><br>
                        <button type="submit">INCLURE</button>
                        <button type="reset">EFFACER</button>
                    </form>
                </fieldset>            
            </div>
        </div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseTwo">
          Modifier un Catway
        </button>
      </h2>
      <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
        <div class="accordion-body">
            <div class="mb-3">
                <fieldset class="ml-3 mt-3">
                    <legend>Formulaire pour MODIFIER un Catway</legend>
                    <form action="/catways/:id?_method=PATCH" method="POST">
                        <label for="id" class="form-label">Tapez l'Id du Catway</label>
                        <input type="text" id="_id" name="_id" class="form-control" required><br>
                        <label for="catwayState">Décrivez l'état du nouveau Catway</label><br>
                        <textarea name="catwayState" id="catwayState" required></textarea><br>
                        <button type="submit">MODIFIER</button>
                        <button type="reset">EFFACER</button>
                    </form>
                </fieldset>            
            </div>
        </div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseThree">
          Supprimer un Catway
        </button>
      </h2>
      <div id="collapseFour" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
        <div class="accordion-body">
            <div class="mb-3">
                <fieldset class="ml-3 mt-3">
                    <legend>Formulaire pour SUPPRIMER un Catway</legend>
                    <form action="/catways/:id?_method=DELETE" method="POST">
                        <label for="id" class="form-label">Tapez l'Id du Catway</label>
                        <input type="text" id="_id" name="_id" class="form-control" required><br>
                        <button type="submit">SUPPRIMER</button>
                        <button type="reset">EFFACER</button>
                    </form>
                </fieldset>            
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>

    
